<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>{{ ansible_hostname }} - System Facts</title>
  <style>
    body { font-family: Arial, sans-serif; margin: 2rem; }
    table { border-collapse: collapse; width: 100%; max-width: 900px; }
    th, td { border: 1px solid #ccc; padding: 0.6rem; text-align: left; }
    th { width: 220px; }
    code { background: #f5f5f5; padding: 0.1rem 0.3rem; }
  </style>
</head>
<body>
  <h1>Host: {{ ansible_hostname }}</h1>
  <p>Generated by Ansible at {{ ansible_date_time.iso8601 }}</p>

  <table>
    <tr>
      <th>IP address</th>
      <td><code>{{ ansible_default_ipv4.address | default('N/A') }}</code></td>
    </tr>
    <tr>
      <th>CPU</th>
      <td>
        {% if ansible_processor is defined and ansible_processor|length > 0 %}
          {{ ansible_processor[-1] }}
        {% else %}
          N/A
        {% endif %}
        (vCPUs: {{ ansible_processor_vcpus | default(ansible_processor_count | default('N/A')) }})
      </td>
    </tr>
    <tr>
      <th>RAM</th>
      <td>{{ ansible_memtotal_mb | default('N/A') }} MB</td>
    </tr>
    <tr>
      <th>First disk size</th>
      <td>{{ primary_disk_size | default('N/A') }}</td>
    </tr>
  </table>
</body>
</html>
